pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                sh "exit"
            }
        }
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('test-deploy') {
            steps {
                sh "pwd"
                sh "ls -la"
                sh "kubectl apply -f nginx-deployment.yaml"
            }
        }
        stage('Hello-success') {
            steps {
                echo 'pipeline success'
            } 
        }
    }
}
